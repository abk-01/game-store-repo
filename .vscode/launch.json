{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: GameStore.Api Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GameStore.Api/bin/Debug/net8.0/GameStore.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GameStore.Api",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        
        {
            "name": "Launch GameStore.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GameStore.Api/bin/Debug/net8.0/GameStore.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GameStore.Api",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Attach to GameStore.Api",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}