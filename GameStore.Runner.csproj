<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <!-- Prevent SDK from compiling all .cs files in the repo (which pulls in the API project files).
         Remove default glob and explicitly include only the runner Program.cs. -->
    <Compile Remove="**\*.cs" />
    <Compile Include="Program.cs" />
  </ItemGroup>
</Project>